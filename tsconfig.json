{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "types": [
      "node",
      "node-fetch"
    ],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",            // Utiliser 'commonjs' pour la compatibilité avec Jest
    "moduleResolution": "node",     // Utiliser 'node' pour une meilleure compatibilité avec les modules Node.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",              // Utiliser 'react-jsx' pour React 17+
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src",
    "app",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}